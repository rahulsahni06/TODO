<resources xmlns:http="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TodoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/todoColorPrimary</item>
        <item name="colorPrimaryDark">@color/todoColorPrimaryDark</item>
        <item name="colorAccent">@color/todoColorAccent</item>
    </style>

    <style name="TodoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>







    <style name="TodoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TodoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TodoTheme.PopupOverlay.Spinner" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginLeft">10dp</item>
    </style>




    <style name="TextAppearance.AppCompat.Widget.TextView.SpinnerItem.MySpinnerText">
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="Widget.AppCompat.TextView.SpinnerItem.MySpinnerItem">
        <!--<item name="android:paddingLeft">50dp</item>-->
        <!--<item name="android:background">?attr/colorPrimary</item>-->
        <!--<item name="android:paddingRight">20dp</item>-->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem.MySpinnerText</item>
    </style>



</resources>
